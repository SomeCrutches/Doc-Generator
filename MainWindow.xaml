
    <Window x:Class="ProizvodkaWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProizvodkaWPF"
        xmlns:controls="clr-namespace:ProizvodkaWPF"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        
        
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <System:Double x:Key="fontSize">14</System:Double>
        <!--A Style that affects all TextBlocks-->
        <Style TargetType="TextBox">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="FontFamily" Value="Times New Roman"/>
            <Setter Property="FontSize" Value="{StaticResource fontSize}"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="FontFamily" Value="Times New Roman"/>
            <Setter Property="FontSize" Value="{StaticResource fontSize}"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            
            <Setter Property="FontFamily" Value="Times New Roman"/>
            <Setter Property="FontSize" Value="{StaticResource fontSize}"/>
        </Style>
    </Window.Resources>
    <TabControl TabStripPlacement="Top" Margin="0, 0, 0, 10">
        
        <TabItem Name="tabIitemContent" Header="Восстановление">
            <Grid ShowGridLines="False">
            <!--<Grid ShowGridLines="True">-->
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    
                </Grid.ColumnDefinitions>

                <Label Content="ФИО студента" Grid.Row="0" Grid.Column="0" />

                <AdornerDecorator Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2">
                    <TextBox x:Name="FirstTabFirst" >
                        <controls:WatermarkService.Watermark>
                            <TextBlock >ФИО студента в родительном падеже</TextBlock>
                        </controls:WatermarkService.Watermark>
                    </TextBox>
                </AdornerDecorator>

                <!--<TextBox Text="" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" x:Name="FirstTabFirst"  />-->

                <Label Content="Направления подготовки" Grid.Row="1" Grid.Column="0" />
                <TextBox Text="" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" x:Name="FirstTabSecond"  />

                <Label Content="Направленность программы" Grid.Row="2" Grid.Column="0" />
                <TextBox Text="" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" x:Name="FirstTabThird"  />

                <Label Content="Договор от №" Grid.Row="3" Grid.Column="0" />
                <TextBox Text="" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" x:Name="FirstTabFourth"  />

                <Label Content="Курс с которого отчислили" Grid.Row="4" Grid.Column="0" />
                <TextBox Text="" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" x:Name="FirstTabFifth"  />

                <Label Content="Приказ отчисления от №" Grid.Row="5" Grid.Column="0" />
                <TextBox Text="" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" x:Name="FirstTabSixth"  />

                <Label Content="Срок ликвидации разницы " Grid.Row="6" Grid.Column="0" />


                <Label Content="Числить в группе" Grid.Row="7" Grid.Column="0" />


                <Label Content="Протокол заседания комиссии" Grid.Row="8" Grid.Column="0" />


                <Label Content="Договор об оказании платных услуг" Grid.Row="9" Grid.Column="0" />

                <Button x:Name="Test" Grid.Row="10" Grid.Column="0" Content="Test" Click="Test_Click"/>




                <DocumentViewer x:Name="FirstTab" Grid.Row="0" Grid.Column="3" Grid.RowSpan="16" Grid.ColumnSpan="3" Zoom="85" />
                <!--<Button Content="Hello" Grid.Row="0" Grid.Column="3" Grid.RowSpan="16" Grid.ColumnSpan="3" />-->
                <!--<Button Grid.Column="0" Grid.Row="0" Content="Новое окно" Click="New_tab_button" />-->
                
            </Grid>
        </TabItem>

        <TabItem Name="backgroundcolor" Header="Background">
            <TabItem.Content>Background property information goes here.</TabItem.Content>
        </TabItem>

        <TabItem Name="foregroundcolor" Header="Foreground">
            <TabItem.Content>Foreground property information goes here.</TabItem.Content>
        </TabItem>

        <TabItem Name="bordercolor" Header="BorderColor">
            <TabItem.Content>Border color property information goes here.</TabItem.Content>
        </TabItem>
    </TabControl>


</Window>
